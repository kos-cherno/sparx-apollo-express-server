{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts",
    "./node_modules",
    "./_warmup",
    "./.webpack",
    "./.vscode",
    "./.idea"
  ]
}
