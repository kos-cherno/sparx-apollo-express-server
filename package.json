{
  "name": "sparx-apollo-express-server",
  "version": "1.0.0",
  "description": "SparX Apollo/Express Server",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm ci && tsc",
    "dev": "npm run build && npx nodemon src/index.ts",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prisma:generate": "npx prisma generate --schema=./src/schema.prisma",
    "prestart": "npm run build",
    "prepare": "husky install",
    "postinstall": "npm run prisma:generate",
    "start": "node .",
    "test": "jest --no-cache --silent --passWithNoTests --collectCoverage --testPathPattern=tests/units"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kos-cherno/sparx-apollo-express-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kos-cherno/sparx-apollo-express-server/issues"
  },
  "homepage": "https://github.com/kos-cherno/sparx-apollo-express-server#readme",
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@types/sqlite3": "^3.1.8",
    "apollo-server-express": "^3.6.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "husky": "^7.0.4",
    "prisma": "^3.11.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.1.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "tslib": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "./eslintrc"
  },
  "prettier": "./prettierrc",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "clearMocks": true,
    "roots": [
      "tests"
    ],
    "setupFiles": [
      "./jest.setup.ts"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text"
    ]
  }
}
